{
	"name": "skynovel",
	"displayName": "SKYNovel",
	"description": "It supports development of SKYNovel for VSCode, VSCodeでSKYNovelの開発をサポートする拡張機能",
	"version": "0.0.2",
	"author": "miyazawa famibee",
	"publisher": "famibee",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Programming Languages",
		"Other"
	],
	"icon": "images/icon.png",
	"activationEvents": [
		"onLanguage:skynovel",
		"onCommand:extension.SKYNovel"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "skynovel",
				"aliases": ["skynovel", "skynovel"],
				"extensions": [
					".sn",
					".an"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "skynovel",
				"scopeName": "source.skynovel",
				"path": "./syntaxes/skynovel.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "extension.SKYNovel",
				"title": "SKYNovel"
			}
		],
		"configuration": {
			"type": "object",
			"title": "%skynovel.configuration.title%",
			"properties": {
				"skynovel.ctagsProcess": {
					"description": "%skynovel.ctagsProcess.description%",
					"type": "array",
					"default": [
						{
							"tagFilePath": ".tags",
							"searchPath": "",
							"searchRecursive": true,
							"runOnSave": false,
							"fileExtensions": [
								".sn",
								".an"
							],
							"extraOption": ""
						}
					],
					"items": {
						"type": "object",
						"properties": {
							"tagFilePath": {
								"description": "%skynovel.items.tagFilePath.description%",
								"type": "string",
								"default": ".tags"
							},
							"searchPath": {
								"description": "%skynovel.items.searchPath.description%",
								"type": "string",
								"default": ""
							},
							"searchRecursive": {
								"description": "%skynovel.items.searchRecursive.description%",
								"type": "boolean"
							},
							"runOnSave": {
								"description": "%skynovel.items.runOnSave.description%",
								"type": "boolean"
							},
							"fileExtensions": {
								"description": "%skynovel.items.fileExtensions.description%",
								"type": "array",
								"items": {
									"type": "string"
								},
								"default": [
									".sn",
									".an"
								]
							},
							"extraOption": {
								"description": "%skynovel.items.extraOption.description%",
								"type": "string",
								"default": ""
							}
						}
					}
				},
				"skynovel.ctagsRunOnSaveLanguages": {
					"description": "%skynovel.ctagsRunOnSaveLanguages.description%",
					"type": "array",
					"default": [
						"skynovel"
					],
					"items": {
						"type": "string"
					}
				},
				"skynovel.referencePalletEnable": {
					"description": "%skynovel.referencePalletEnable.description%",
					"type": "object",
					"default": {
						"kag3": false,
						"skynovel": true
					},
					"properties": {
						"kag3": {
							"description": "%skynovel.referencePalletEnable.kag3.description%",
							"type": "boolean"
						},
						"skynovel": {
							"description": "%skynovel.referencePalletEnable.skynovel.description%",
							"type": "boolean"
						}
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test",
		"package": "vsce package"
	},
	"devDependencies": {
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	},
	"keywords": [
		"skynovel",
		"vscode",
		"vscode-extension",
		"vscode-plugin",
		"typescript"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/famibee/SKYNovel-vscode-extension.git"
	},
	"bugs": {
		"url": "https://github.com/famibee/SKYNovel-vscode-extension/issues",
		"email": "famibee@gmail.com"
	},
	"homepage": "http://famibee.blog38.fc2.com/"
}
