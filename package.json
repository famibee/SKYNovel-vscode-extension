{
	"name": "skynovel",
	"displayName": "SKYNovel",
	"description": "It supports development of SKYNovel for VSCode, VSCodeでSKYNovelの開発をサポートする拡張機能",
	"version": "0.3.1",
	"author": "miyazawa famibee",
	"publisher": "famibee",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Programming Languages",
		"Other"
	],
	"icon": "images/icon.png",
	"activationEvents": [
		"onLanguage:skynovel",
		"onCommand:skynovel.openReferencePallet"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "skynovel",
				"aliases": [
					"SKYNovel"
				],
				"extensions": [
					".sn",
					".an"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "skynovel",
				"scopeName": "source.skynovel",
				"path": "./syntaxes/skynovel.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "skynovel.openReferencePallet",
				"title": "%skynovel.openReferencePallet.title%",
				"category": "SKYNovel"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"npm_check_updates_do": "ncu -a && npm update && npm i -D",
		"test": "npm run compile && node ./node_modules/vscode/bin/test",
		"version:patch": "npm -no-git-tag-version version patch",
		"version:minor": "npm -no-git-tag-version version minor",
		"version:major": "npm -no-git-tag-version version major",
		"package": "vsce package"
	},
	"dependencies": {
		"image-size": "^0.7.1"
	},
	"devDependencies": {
		"@types/chokidar": "^1.7.5",
		"@types/mocha": "^5.2.5",
		"@types/node": "^10.12.21",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"keywords": [
		"skynovel",
		"vscode",
		"vscode-extension",
		"vscode-plugin",
		"typescript",
		"multi-root ready"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/famibee/SKYNovel-vscode-extension.git"
	},
	"bugs": {
		"url": "https://github.com/famibee/SKYNovel-vscode-extension/issues",
		"email": "famibee@gmail.com"
	},
	"homepage": "http://famibee.blog38.fc2.com/"
}
