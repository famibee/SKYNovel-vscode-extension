// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "npm_check_updates_do",
			"problemMatcher": []
		},
		{
			"type": "npm",
			"script": "publish",
			"problemMatcher": []
		},
		{
			"type": "npm",
			"script": "version:patch",
			"problemMatcher": []
		},
		{
			"type": "npm",
			"script": "version:minor",
			"problemMatcher": []
		},
		{
			"label": "dbg start",
			"type": "npm",
			"script": "watch",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": true,
			"problemMatcher": {
				"pattern": [
					{
						"regexp": ".",
						"file": 1,
						"location": 2,
						"message": 3
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*",
					"endsPattern": "^.*Built at.*",
				}
			},
			"presentation": {
				"reveal": "never"
			}
		},
		{
			"label": "dbg stop",
			"type": "shell",
			"group": "build",
			"command": "echo ${input:terminate}"
		}
	],
	"inputs": [
		{
			"id": "terminate",
			"type": "command",
			"command": "workbench.action.tasks.terminate",
			"args": "dbg start"
		}
	]
}
